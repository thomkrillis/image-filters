{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/typings"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
